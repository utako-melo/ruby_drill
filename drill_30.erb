def fizzbuzz(max_num)
  (1..max_num).each do |i|
    if i % 3 == 0 && i % 5 == 0
      puts 'FizzBuzz'
    elsif i % 3 == 0
      puts 'Fizz'
    elsif i % 5 == 0
      puts 'Buzz'
    else
      puts i
    end
  end
end

puts 'いくつまで数えますか？'
num = gets.to_i
fizzbuzz(num)


